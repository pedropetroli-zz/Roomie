<h2>Renting List</h2><br>

<table class="table table-striped table-hover table-condensed">
    <tr>
      <th class="center">House</th>
      <th class="center">Arrival</th>
      <th class="center">Departure</th>
      <th class="center">Insurance</th>
      <th class="center">Host</th>
      <th class="center">Amount</th>
      <th class="center">Renting Code</th>
      <th class="center">View</th>
      <th colspan="3"></th>
    </tr>

  <tbody>
    <% @rentings.each do |renting| %>
      <tr>
        <td class="center"><%= image_tag renting.house.image.url(:thumb) %></td>
        <td class="center"><%= renting.arrival %></td>
        <td class="center"><%= renting.departure %></td>
        <td class="center"><%= renting.insurance %></td>
        <td class="center"><%= renting.host_id %></td>
        <td class="center"><%= renting.host_amount %></td>
        <td class="center"><%= renting.id %></td>
        <td class="center"><%= renting.created_at.strftime("%Y %Ë†b %d") %></td>
        <td class="center"><%= number_to_currency(renting.host_amount) %></td>
        <td class="center"><div class="action">
          <%= link_to renting, class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-zoom-in"></i>
          <% end %> 
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table><br>