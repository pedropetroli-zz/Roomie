<h2>Rentals</h2><br>

<table class="table table-striped table-hover table-condensed">
    <tr>
      <th class="center">Room</th>
      <th class="center">Arrival</th>
      <th class="center">Departure</th>
      <th class="center">Insurance</th>
      <th class="center">Guest</th>
      <th class="center">Amount</th>
      <th class="center">Renting Code</th>
      <th class="center">View</th>
      <th colspan="3"></th>
    </tr>

  <tbody>
    <% @rentings.each do |renting| %>
      <tr>
        <td class="center"><%= image_tag renting.house.image.url(:thumb) %></td>
        <td><%= renting.arrival %></td>
        <td><%= renting.departure %></td>
        <td><%= renting.insurance %></td>
        <td><%= renting.host_id %></td>
        <td><%= renting.host_amount %></td>
        <td><%= renting.id %></td>
        <td><%= renting.created_at.strftime("%d-%b-%Y") %></td>
        <td><%= number_to_currency(renting.host_amount) %></td>
        <td><div class="action">
          <%= link_to renting, class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-zoom-in"></i>
          <% end %> 
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table><br>