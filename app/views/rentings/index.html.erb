        <td><%= renting.departure %></td>
        <td><%= renting.insurance %></td>
        <td><%= renting.host_id %></td>
        <td><%= renting.host_amount %></td>
        <td><%= renting.id %></td>
        <td> <%= renting.created_at.strftime("%Y %Ë†b %d") %></td>
        <td> <%= number_to_currency(renting.rental) %></td>
        <td><div class="action">
          <%= link_to renting, class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-zoom-in"></i>
          <% end %> 
        </div></td>
      </tr>
    <% end %>
  </tbody>
</table>

