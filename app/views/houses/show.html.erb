<div class="row">
  <div class="col-md-6">
  	<div class="thumbnail">
  		<%= image_tag @house.image.url %>
  	</div>
  </div>
  <div class="col-md-6">
    
    <h4><%= @house.name %></h4>
    <p><%= number_to_currency(@house.rental) %></p>
    <p><%= @house.address%></p>

    <% if current_user == @house.user %>
        <%= link_to 'Edit', edit_house_path(@house), class: "btn btn-link" %> |
    <% end %>
      <%= link_to 'Back', houses_path, class: "btn btn-link" %>
  </div>
</div>

